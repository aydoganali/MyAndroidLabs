<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_message" />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/button_message"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/myedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hinttext"
        android:minHeight="48dp"
        android:text="@string/editmessage"></EditText>


    <CheckBox
        android:text="I'm a checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theCheckbox" />

    <Switch
        android:text="I'm a switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theSwitch" />

    <RadioButton
        android:text="I'm a radio button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theRadioButton" />

    <ImageButton
        android:id="@+id/theImageBtn"
        android:src="@drawable/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>